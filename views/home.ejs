<html>
    <head>
        <title>
            <%=
            title
            %>
        </title>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1 style="text-align:center" id="page-heading">
            <i class="fas fa-address-book"></i> Phone Book</h1><br>
        <div style="margin-left: 340px;" id="container">
            <form  >
                        <fieldset>
                          <input placeholder="Search" type="text" tabindex="1"  autofocus><button id="button"><i class="fas fa-search"></i></button>
                        </fieldset>
                      </form>
                       
            <ul style="list-style: none;">
                <% for(var i of contact_list){ %>
                   <li>

                    <span id="name"><%=i.name%></span>
                            <span id="phone"><i class="fas fa-caret-down"></i></span><hr>
                            <div id="details" style="background-color: rgb(243, 169, 243);color:black">
                                <span ><%=i.dob%></span>
                                <span><a id="href" href="/edit">
                                    <button id="edit">Edit</button></a></span>
                                <span><a id="href" href="/delete-contact/?id=<%= i._id %>">
                                <button id="remove">Remove</button>
                                </a></span>
                                <div>
                                    <span><i style="color:black" class="fas fa-phone-square"></i></span><span><%=i.phone%></span>
                                    <span id="email"><i style="color:black" class="fas fa-envelope"></i></span><span><%=i.email%></span>
                                </div>
                            </div>
                    
                    </li>
                   
                    <%}%>
            </ul>
           </form>
        </div>
